<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<TabPane prefHeight="720.0" prefWidth="960.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.padaria.controller.RelatorioController">
   <tabs>
      <Tab text="Resumo">
         <content>
            <VBox>
               <children>
                  <BorderPane>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <left>
                        <Label text="Ganhos" BorderPane.alignment="CENTER">
                           <BorderPane.margin>
                              <Insets />
                           </BorderPane.margin>
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </left>
                     <padding>
                        <Insets bottom="10.0" />
                     </padding>
                     <right>
                        <ChoiceBox fx:id="choiceBoxEscolhas" prefWidth="150.0" BorderPane.alignment="CENTER" />
                     </right>
                     <center>
                        <HBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
                           <children>
                              <DatePicker fx:id="datePickerInicio" />
                              <DatePicker fx:id="datePickerFinal" />
                           </children>
                        </HBox>
                     </center>
                  </BorderPane>
                  <BarChart fx:id="barChartGanhos" prefHeight="504.0" prefWidth="960.0">
                     <xAxis>
                        <CategoryAxis label="Tempo" side="BOTTOM" fx:id="xAxis" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis fx:id="yAxis" label="Valor (R$)" side="LEFT" />
                     </yAxis>
                  </BarChart>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </Tab>
      <Tab text="Vendas por Produto">
         <content>
            <AnchorPane>
               <children>
                  <BarChart prefHeight="400" prefWidth="600" title="Vendas por Produto" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <xAxis>
                        <CategoryAxis label="Produto" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis label="Quantidade/Valor" />
                     </yAxis>
                  </BarChart>
               </children>
            </AnchorPane>
         </content>
      </Tab>
      <Tab text="Vendas por Categoria">
         <content>
            <AnchorPane>
               <children>
                  <PieChart prefHeight="400" prefWidth="600" title="Vendas por Categoria" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
               </children>
            </AnchorPane>
         </content>
      </Tab>
   </tabs>
</TabPane>
