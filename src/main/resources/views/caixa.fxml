<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<TabPane prefHeight="720.0" prefWidth="1280.0" stylesheets="@../styles/caixa.css" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.padaria.controller.CaixaController">
   <tabs>
      <!-- Tab do Carrinho -->
      <Tab text="Carrinho">
         <content>
            <StackPane>
               <children>
                  <HBox prefHeight="720.0" prefWidth="1280.0">
                     <children>
                        <VBox prefHeight="691.0" prefWidth="1240.0" spacing="10.0">
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                           <children>
                              <!-- Cabeçalho do Carrinho -->
                              <AnchorPane>
                                 <children>
                                    <Label text="Carrinho" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                                       <font>
                                          <Font size="18.0" />
                                       </font>
                                    </Label>
                                    <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                       <image>
                                          <Image url="@/images/shopping-cart.png" />
                                       </image>
                                    </ImageView>
                                 </children>
                              </AnchorPane>

                              <!-- Área onde os itens do carrinho serão exibidos -->
                              <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="638.0">
                                 <content>
                                    <FlowPane fx:id="carrinhoFlowPane" hgap="10.0" prefWidth="859.0" prefWrapLength="1240.0" vgap="10.0" />
                                 </content>
                              </ScrollPane>
                           </children>
                        </VBox>
                        <VBox prefHeight="691.0" prefWidth="580.0" spacing="16.0">
                           <children>
                              <Label text="Checkout">
                                 <font>
                                    <Font name="System Bold" size="24.0" />
                                 </font>
                              </Label>
                              <AnchorPane>
                                 <children>
                                    <Label text="Total: " AnchorPane.leftAnchor="0.0">
                                       <font>
                                          <Font size="18.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="totalLabel" layoutX="49.0" style="-fx-font-weight: bold;" text="R$ 0,00" AnchorPane.rightAnchor="0.0">
                                       <font>
                                          <Font size="18.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </AnchorPane>
                              <Button fx:id="buttonEfetuarVenda" onAction="#efetuarVenda" prefHeight="39.0" prefWidth="270.0" text="Efetuar Venda">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </Button>
                           </children>
                           <padding>
                              <Insets bottom="24.0" left="24.0" right="24.0" top="24.0" />
                           </padding>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </StackPane>
         </content>
      </Tab>

      <!-- Tab dos Produtos -->
      <Tab text="Produtos">
         <content>
            <StackPane>
               <children>
                  <VBox alignment="TOP_CENTER" prefWidth="1280.0" spacing="10.0">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        <!-- Cabeçalho dos Produtos -->
                        <AnchorPane>
                           <children>
                              <Label text="Produtos" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Label>
                              <HBox alignment="CENTER" spacing="8.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <children>
                                    <ImageView pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@/images/lupa.png" />
                                       </image>
                                    </ImageView>
                                    <TextField fx:id="campoPesquisa" promptText="Pesquisar produtos..." />
                                 </children>
                              </HBox>
                           </children>
                        </AnchorPane>

                        <!-- Área rolável onde os produtos serão exibidos -->
                        <ScrollPane fitToWidth="true" prefHeight="645.0" prefWidth="1260.0">
                           <content>
                              <FlowPane fx:id="produtoFlowPane" columnHalignment="CENTER" hgap="10.0" prefWrapLength="1240.0" style="-fx-background-color: #f0f0f0; -fx-border-color: #cccccc;" vgap="10.0" />
                           </content>
                        </ScrollPane>
                     </children>
                  </VBox>
               </children>
            </StackPane>
         </content>
      </Tab>
   </tabs>
</TabPane>
